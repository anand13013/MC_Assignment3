<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/anand"
    android:background="#ffc415">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/textmessage"
        android:hint="Enter text"
        android:background="#f6fff2"
        android:textSize="20dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAVE"
        android:id="@+id/isave"
        android:layout_marginTop="125dp"
        android:onClick="onInternalSave"
        android:layout_below="@+id/textmessage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="30dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Read"
        android:id="@+id/iread"
        android:onClick="onInternalRead"
        android:layout_alignTop="@+id/isave"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="30dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAVE"
        android:id="@+id/esave"
        android:onClick="onExternalSave"
        android:layout_above="@+id/edelete"
        android:layout_alignParentLeft="true"

        android:layout_alignParentStart="true"
        android:textSize="30dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:id="@+id/edelete"

        android:textSize="30dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Read"
        android:id="@+id/eread"
        android:onClick="onExternalRead"
        android:textSize="30dp"
        android:layout_alignTop="@+id/esave"
        android:layout_toRightOf="@+id/edelete"
        android:layout_toEndOf="@+id/edelete" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DELETE"
        android:id="@+id/idelete"
        android:onClick="onExternalDelete"
        android:layout_alignTop="@+id/isave"
        android:layout_alignLeft="@+id/edelete"
        android:layout_alignStart="@+id/edelete"
        android:textSize="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Internal Storage"
        android:id="@+id/textView"
        android:layout_above="@+id/idelete"
        android:layout_marginBottom="54dp"
        android:textSize="35dp"
        android:textStyle="bold|italic"
        android:layout_toLeftOf="@+id/iread"
        android:layout_toStartOf="@+id/iread" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="External Storage"
        android:id="@+id/textView2"
        android:textSize="35dp"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:textStyle="bold|italic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Read"
        android:id="@+id/imessage"
        android:layout_above="@+id/idelete"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:textSize="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Read"
        android:id="@+id/emessage"
        android:layout_above="@+id/esave"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="18dp" />
</RelativeLayout>
